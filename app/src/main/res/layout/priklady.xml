<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_vertical|center_horizontal|center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/shakeImageViewCounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alarmbuz" />

    <TextView
        android:id="@+id/textViewShake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:text="@string/calculate"
        android:textColor="@color/textall"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/textall"
        android:textSize="18sp"
        android:visibility="gone" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/dalsi"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/cisloPrikladu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textColor="@color/textall"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/znamenkoPrikladu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="/"
            android:textColor="@color/textall"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/cisloPrikladu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="27"
            android:textColor="@color/textall"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="="
            android:textColor="@color/textall"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTextVysledek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textall"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/textall"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/imageButtonVysledek"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/check" />

    </TableRow>

</LinearLayout>